<UserControl x:Class="oop_project.View.BinTreeVisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oop_project.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding GenerateRandomTextCommand}"/>
    </UserControl.InputBindings>

    <StackPanel Height="336">
        <Label Foreground="Blue" Margin="5,5,5,0">Randomly generated text</Label>
        <TextBlock Text="{Binding SomeText, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <Button Command="{Binding GenerateRandomTextCommand}" Margin="5">Generate</Button>
    </StackPanel>

</UserControl>
